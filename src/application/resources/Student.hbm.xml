<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="adam.stan.objects.Student" table="student" catalog="forschooldb">
        <id name="nrIndex" type="java.lang.Integer">
            <column name="nrIndex" />
        </id>
        <property name="name" type="string">
            <column name="name" length="20" not-null="true"/>
        </property>
        <property name="surname" type="string">
            <column name="surname" length="20" not-null="true"/>
        </property>
        <set name="marks" table="mark"
				inverse="true" lazy="true" fetch="select">
            <key>
                <column name="student_id" not-null="true" />
            </key>
            <one-to-many class="adam.stan.objects.Mark" />
        </set>
    </class>
</hibernate-mapping>